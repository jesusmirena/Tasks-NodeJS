doctype html
html(lang="en")
    head
      include partials/header
    body.login 
        .contenedor-formulario
            h1 Log in to UpTask 
            
            if locals.messages 
                .alertas
                    each category in Object.keys(locals.messages)
                        each error in messages[category] 
                            .alerta(class=`${category}`)
                                p= error
            form#formulario.caja.caja-login(method="POST" action="/login")
                .campo 
                    label(for="email") E-mail: 
                    input(type="email" name="email" placeholder="Your E-mail" value= email  required)
                .campo 
                    label(for="password") Password: 
                    input(type="password" name="password" placeholder="Your Password" value= password required)
                .campo.enviar
                    input.boton(type="submit" value="Log in")
                .campo.acciones
                    a(href="/create-account") Create an account?
                    a(href="/reset") Forgot your password?
                    