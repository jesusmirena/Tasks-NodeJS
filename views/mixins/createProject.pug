mixin createProject(project = {}) 
    form.agregar-proyecto(action=`/new-project/${project.id || ""}`, method="POST")
        .campo 
            label(for="name") New Project
            input(value=project.name type="text" id="name" name="name" placeholder="Project name") 
        .campo.enviar 
            input(type="submit" value=`${project.name ? "Save" : "Add"}` class="boton")